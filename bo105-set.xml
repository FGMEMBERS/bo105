<?xml version="1.0"?>
<!--
************************************************************************
Bo 105 simulation config.
************************************************************************
-->

<PropertyList>
	<sim>
		<description>Eurocopter Bo105</description>
		<author>Melchior Franz, Maik Justus (FDM)</author>
		<status>beta</status>
		<version>0.1</version>

		<flight-model>yasim</flight-model>
		<aero>bo105</aero>
		<fuel-fraction>0.8</fuel-fraction>

		<startup>
			<splash-texture>Aircraft/bo105/bo105splash.rgb</splash-texture>
		</startup>

		<sound>
			<path>Aircraft/bo105/bo105-sound.xml</path>
		</sound>

		<systems>
			<electrical>
				<path>Aircraft/Generic/generic-electrical.xml</path>
			</electrical>
		</systems>

		<submodels>
			<serviceable type="bool">true</serviceable>
			<path>Aircraft/bo105/Models/submodels.xml</path>
		</submodels>

		<panel>
			<visibility archive="n">false</visibility>
		</panel>

		<model>
			<path archive="y">Aircraft/bo105/Models/bo105.xml</path>
			<bo105>
				<variant type="int">0</variant>
				<emblem type="string"><!--set by bo105.nas--></emblem>
				<insignia type="string">emblems/oebh.rgb</insignia>
				<shadow type="bool">true</shadow>
				<wiper type="bool">true</wiper>
				<tail-angle type="int" archive="y">0</tail-angle>
				<state type="int">0</state>
				<rotor-step-deg type="float">-1.0</rotor-step-deg>
				<material>
					<glass>
						<diffuse>
							<red>0.2</red>
							<green>0.2</green>
							<blue>0.2</blue>
						</diffuse>

						<ambient>
							<red>0.2</red>
							<green>0.2</green>
							<blue>0.2</blue>
						</ambient>

						<specular>
							<red>1.0</red>
							<green>1.0</green>
							<blue>1.0</blue>
						</specular>

						<emission>
							<red>0.0</red>
							<green>0.0</green>
							<blue>0.0</blue>
						</emission>

						<transparency>0.8</transparency>
						<shininess>25</shininess>
					</glass>

					<fuselage>
						<diffuse>
							<red>0.8</red>
							<green>0.7</green>
							<blue>0.001</blue>
						</diffuse>

						<ambient>
							<red>0.8</red>
							<green>0.7</green>
							<blue>0.0</blue>
						</ambient>

						<specular>
							<red>0.4</red>
							<green>0.2</green>
							<blue>0.0</blue>
						</specular>

						<emission>
							<red>0.0</red>
							<green>0.0</green>
							<blue>0.0</blue>
						</emission>

						<transparency>0.0</transparency>
						<shininess>32</shininess>
					</fuselage>

					<emblem>
						<texture>empty.rgb</texture>
						<transparency>0.0</transparency>
						<threshold>0.1</threshold>
					</emblem>
				</material>

				<doors>
					<door>
						<name type="string">pilot's door</name>
					</door>

					<door>
						<name type="string">copilot's door</name>
					</door>

					<door>
						<name type="string">right backdoor</name>
					</door>

					<door>
						<name type="string">left backdoor</name>
					</door>

					<door>
						<name type="string">right reardoor</name>
					</door>

					<door>
						<name type="string">left reardoor</name>
					</door>
				</doors>
			</bo105>
		</model>

		<view n="0">
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">0.38</x-offset-m><!--right-->
				<y-offset-m archive="y">0.60</y-offset-m><!--up-->
				<z-offset-m archive="y">1.0</z-offset-m><!--back-->
				<pitch-offset-deg>-8</pitch-offset-deg>
			</config>
		</view>

		<view n="1">
			<config>
				<target-z-offset-m archive="y" type="double">2.5</target-z-offset-m>
			</config>
		</view>

		<view n="2">
			<config>
				<target-z-offset-m archive="y" type="double">2.5</target-z-offset-m>
			</config>
		</view>

		<view n="3">
			<config>
				<target-z-offset-m archive="y" type="double">2.5</target-z-offset-m>
			</config>
		</view>

		<view n="4">
			<config>
				<target-z-offset-m archive="y" type="double">2.5</target-z-offset-m>
			</config>
		</view>

		<view n="5">
			<config>
				<target-z-offset-m archive="y" type="double">2.5</target-z-offset-m>
			</config>
		</view>


		<hud>
			<enable3d>false</enable3d>
		</hud>

		<weight n="0">
			<name>Pilot</name>
			<weight-lb>180</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="1">
			<name>Co-Pilot</name>
			<weight-lb>180</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="2">
			<name>Right Passenger</name>
			<weight-lb>0</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="3">
			<name>Middle Passenger</name>
			<weight-lb>0</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="4">
			<name>Left Passenger</name>
			<weight-lb>0</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="5">
			<name>Load</name>
			<weight-lb>0</weight-lb>
			<max-lb>800</max-lb>
		</weight>
	</sim>

	<controls>
		<flight>
			<aileron-trim>0</aileron-trim>
			<elevator-trim>0</elevator-trim>
			<rudder-trim>0</rudder-trim>
		</flight>

		<engines>
			<engine n="0">
				<magnetos>0</magnetos>
			</engine>
			<engine n="1">
				<throttle>1</throttle>
			</engine>
		</engines>

		<lighting>
			<strobe type="bool">true</strobe>
			<beacon type="bool">true</beacon>
			<nav-lights type="bool">true</nav-lights>
		</lighting>
	</controls>

	<input>
		<keyboard>
			<key n="9">
				<name>Ctrl-I</name>
				<desc>Show configuration dialog</desc>
				<binding>
					<command>nasal</command>
					<script>bo105.showDialog()</script>
				</binding>
			</key>

			<key n="67">
				<name>C</name>
				<desc>Show material dialogs</desc>
				<binding>
					<command>nasal</command>
					<script>
						material.showDialog("/sim/model/bo105/material/fuselage/", nil, 10);
						material.showDialog("/sim/model/bo105/material/glass/", nil, 240);
						material.showDialog("/sim/model/bo105/material/emblem/", nil, 470);
					</script>
				</binding>
			</key>

			<key n="68">
				<name>D</name>
				<desc>Select next door</desc>
				<binding>
					<command>nasal</command>
					<script>bo105.next_door()</script>
				</binding>
			</key>

			<key n="99">
				<name>c</name>
				<desc>Cycle variants</desc>
				<binding>
					<command>nasal</command>
					<script>bo105.select_variant()</script>
				</binding>
			</key>

			<key n="100">
				<name>d</name>
				<desc>Open/close selected door</desc>
				<binding>
					<command>nasal</command>
					<script>bo105.toggle_door()</script>
				</binding>
			</key>

			<key n="123">
				<name>{</name>
				<desc>Start Engines</desc>
				<binding>
					<command>nasal</command>
					<script>bo105.engines(-1)</script>
				</binding>
			</key>

			<key n="125">
				<name>}</name>
				<desc>Shutdown Engines</desc>
				<binding>
					<command>nasal</command>
					<script>bo105.engines(1)</script>
				</binding>
			</key>
		</keyboard>
	</input>

	<nasal>
		<bo105>
			<file>Aircraft/bo105/Models/bo105.nas</file>
		</bo105>
	</nasal>

	<rotors>
		<main>
			<rpm type="double">0</rpm>
		</main>
	</rotors>
</PropertyList>
