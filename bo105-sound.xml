<?xml version="1.0"?>

<PropertyList>
	<fx>
		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>Sounds/helicopter.wav</path>
			<condition>
				<greater-than>
					<property>/rotors/main/rpm</property>
					<value>.5</value>
				</greater-than>
			</condition>
			<volume>
				<factor>.2</factor>
			</volume>
			<pitch>
				<property>/rotors/main/rpm</property>
                               <factor>0.01</factor>
                               <max>4.5</max>
			</pitch>
		</engine>

		<overspeed>
			<name>overspeed</name>
			<mode>looped</mode>
			<path>Sounds/overspeed.wav</path>
			<condition>
				<greater-than>
					<property>/velocities/airspeed-kt</property>
					<value>270</value>
				</greater-than>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
		</overspeed>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind.wav</path>
			<property>/velocities/airspeed-kt</property>
			<volume>
				<property>/position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>/velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
		</wind>
	</fx>
</PropertyList>
